<Controls:MetroWindow x:Class="Gelation_Cloning_Control.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gelation_Cloning_Control"
        mc:Ignorable="d"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="Gelation Control" Height="500" Width="800">
    <Controls:MetroWindow.Style>
        <Style TargetType="{x:Type Controls:MetroWindow}">
            <Setter Property="FontFamily" Value="Veranda" />
            <Setter Property="FontSize" Value="12" />
        </Style>
    </Controls:MetroWindow.Style>
    <Grid>

        <ComboBox x:Name="cmbBoxSerialPort" DropDownOpened="cmbBoxSerialPort_DropDownOpened" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" Height="25"/>
        <Button x:Name="btnConnect" Content="Connect" Click="btnConnect_Click" Padding="0" HorizontalAlignment="Left" Margin="144,10,0,0" VerticalAlignment="Top" Width="75" Height="25"  
                Controls:ButtonHelper.PreserveTextCase="true" Style="{DynamicResource SquareButtonStyle}" />

        <TextBlock x:Name="textBlockSerialSent" Text="Serial Sent" HorizontalAlignment="Left" Margin="10,297,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlockSerialSendSingleCommand" Text="Serial Send Command" HorizontalAlignment="Left" Margin="10,245,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlockSerialRecieved" Text="Serial Recieved" HorizontalAlignment="Left" Margin="10,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

        <ListBox x:Name="listBoxSerialRecieved" x:FieldModifier="public" FontSize="10" HorizontalAlignment="Left" Height="160" Margin="10,80,0,0" VerticalAlignment="Top" Width="209" BorderThickness="2"/>
        <ListBox x:Name="listBoxSerialSent" HorizontalAlignment="Left" Height ="142" Margin="10,316,0,0" VerticalAlignment="Top" Width="209" BorderThickness="2"/>
        <TextBox x:Name="textBoxSerialSendCommand" IsEnabled="False" HorizontalAlignment="Left" Height="25" Margin="10,266,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161"/>
        <Button x:Name="btnSerialSendCommand" Content="Send" Click="btnSerialSendCommand_Click"  IsEnabled="False" HorizontalAlignment="Left" Padding="0" Margin="176,267,0,0" 
                VerticalAlignment="Top" Width="43" Height="25" Controls:ButtonHelper.PreserveTextCase="true" Style="{DynamicResource SquareButtonStyle}" />

        <TextBlock x:Name="textBlockLaserCurrent" Margin="283,128,0,0" FontSize="14" FontWeight="Bold" TextWrapping="Wrap" Text="Laser Current (mA)" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Button x:Name="btnSetCurrent" Content="Set" Click="btnSetCurrent_Click" IsEnabled="False" Padding="0" HorizontalAlignment="Left" Margin="342,150,0,0" VerticalAlignment="Top" Width="43" Height="25"  
                Controls:ButtonHelper.PreserveTextCase="true" Style="{DynamicResource SquareButtonStyle}" />
        <TextBox x:Name="textBoxCurrentSet" IsEnabled="False" TextChanged="textBoxCurrentSet_TextChanged" PreviewTextInput="textBoxCurrent_PreviewTextInput" Text=""
                 HorizontalAlignment="Left" Height="25" Margin="283,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="54"/>

        <RadioButton x:Name="radioBtnCW" Content="Continuous Wave" Checked="radioBtnCW_Checked" Unchecked="radioBtnCW_Unchecked" IsEnabled="False" FontFamily="Verdana" FontSize="12" FontWeight="Bold" HorizontalAlignment="Left" Margin="283,180,0,0" VerticalAlignment="Top"/>
        <Controls:ToggleSwitch Name="toggleLaser"  Click="toggleLaser_Click" Header="Laser Output" IsEnabled="False" Margin="283,63,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>


        <RadioButton x:Name="radioBtnPWM" Content="PWM" Checked="radioBtnPWM_Checked" Unchecked="radioBtnPWM_Unchecked" IsEnabled="False" FontFamily="Verdana" FontSize="12" FontWeight="Bold" HorizontalAlignment="Left" Margin="283,203,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlockFreq" HorizontalAlignment="Left" Margin="283,226,0,0" TextWrapping="Wrap" Text="Period (ms)" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxPeriodSet" IsEnabled="False" TextChanged="textBoxPeriodSet_TextChanged"  PreviewTextInput="textBoxPeriodSet_PreviewTextInput"  Text=""
            HorizontalAlignment="Left" Height="25" Margin="283,245,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="54"/>
        <Button x:Name="btnSetPeriod" Content="Set" Click="btnSetPeriod_Click" IsEnabled="False" Padding="0" HorizontalAlignment="Left" Margin="342,246,0,0" VerticalAlignment="Top" Width="43" Height="25"  
            Controls:ButtonHelper.PreserveTextCase="true" Style="{DynamicResource SquareButtonStyle}" />
        <TextBlock x:Name="textBlockDutyCycle" HorizontalAlignment="Left" Margin="283,276,0,0" TextWrapping="Wrap" Text="Duty Cycle (%)" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxDutyCycleSet" IsEnabled="False" TextChanged="textBoxDutyCycleSet_TextChanged"  PreviewTextInput="textBoxDutyCycleSet_PreviewTextInput"
            HorizontalAlignment="Left" Height="25" Margin="283,295,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="54"/>
        <Button x:Name="btnSetDutyCycle" Content="Set" Click="btnSetDutyCycle_Click"  IsEnabled="False" Padding="0" HorizontalAlignment="Left" Margin="342,295,0,0" VerticalAlignment="Top" Width="43" Height="25"  
            Controls:ButtonHelper.PreserveTextCase="true" Style="{DynamicResource SquareButtonStyle}" />









    </Grid>
</Controls:MetroWindow>
